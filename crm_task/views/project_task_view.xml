<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<record model="ir.actions.act_window" id="crm_case_category_act_oppor11">
    <field name="name">Opportunities</field>
    <field name="res_model">crm.lead</field>
    <field name="view_mode">kanban,tree,graph,form,calendar</field>
    <field name="domain">[('type','=','opportunity'),('task','=',active_id)]</field>
    <field name="context">{
            'stage_type': 'opportunity',
            'default_type': 'opportunity',
            'default_user_id': uid,
            'default_task': active_id
        }
    </field>
    <field name="view_id" eval="False"/>
    <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
</record>

<record model="ir.actions.act_window" id="crm_case_category_act_leads_all">
    <field name="name">Leads</field>
    <field name="res_model">crm.lead</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">['|', ('type','=','lead'), ('type','=',False), ('task','=',active_id)]</field>
    <field name="view_id" ref="crm.crm_case_tree_view_leads"/>
    <field name="search_view_id" ref="crm.view_crm_case_leads_filter"/>
    <field name="context">{
            'default_type':'lead',
            'stage_type':'lead',
            'needaction_menu_ref': 'crm.menu_crm_opportunities',
            'search_default_unassigned':1,
            'default_task': active_id
        }
    </field>
</record>

<record model="ir.ui.view" id="crm_case_form_view_leads">
    <field name="name">Project - Tasks Form with leads</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
        <xpath expr="//h1" position="after">
            <div class="oe_right oe_button_box" name="buttons">
                <button name="%(crm_task.crm_case_category_act_oppor11)d"
                        type="action"
                        class="oe_stat_button oe_inline"
                        icon="fa-star">
                    <field name="opportunities_count"
                           widget="statinfo"
                           string="Opportunities"/>
                </button>
                <button name="%(crm_task.crm_case_category_act_leads_all)d"
                        type="action"
                        class="oe_stat_button oe_inline"
                        icon="fa-users">
                    <field name="leads_count"
                           widget="statinfo"
                           string="Leads"/>
                </button>
            </div>
        </xpath>
    </field>
</record>

</data>
</openerp>